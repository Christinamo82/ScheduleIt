extends layout

block content

    h2.page-header Login
    p Please enter the requirements then press "Login"
        ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method = 'post', action = '/users/login', enctype = 'multipart/form-data') 
        label Username
        input.form-control(name = 'username', type = 'text', placeholder = 'Please enter username')
        .form-group
        label Password
        input.form-control(name = 'password', type = 'password', placeholder = 'Please enter password')
        input.btn(type = 'submit', name = 'submit', value = 'Login',
        style='margin-top: 20px;')