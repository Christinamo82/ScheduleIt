extends layout

block content
    h2.page-header Register
    p Please enter the requirements then press "Register"
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method = 'post', action = '/users/register', enctype = 'multipart/form-data') 
        .form-group
        label Name
        input.form-control(name = 'name', type = 'text', placeholder = 'Please enter name')
        .form-group
        label E-mail
        input.form-control(name = 'email', type = 'email', placeholder = 'Please enter e-mail')
        .form-group
        label Username
        input.form-control(name = 'username', type = 'text', placeholder = 'Please enter username')
        .form-group
        label Password
        input.form-control(name = 'password', type = 'password', placeholder = 'Please enter password')
        .form-group
        label Confirm Password
        input.form-control(name = 'password2', type = 'password', placeholder = 'Please enter password')
        input.btn(type = 'submit', name = 'submit', value = 'Register',
        style='margin-top: 20px;')